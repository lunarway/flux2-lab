{{- $env := get "env" .Vars -}}
{{- $service := string "service" .Vars -}}
{{- $namespace := get "env" .Vars -}}
{{- $nb := get "nb" .Args -}}
apiVersion: kustomize.toolkit.fluxcd.io/v1beta1
kind: Kustomization
metadata:
  name: {{ $service }}-{{ $nb }}
  namespace: {{ $namespace }}
spec:
  interval: 5m0s
  path: ./k8s-cluster-config/{{ $env }}/releases/{{ $namespace }}/{{ $service }}-{{ $nb }}
  prune: true
  sourceRef:
    kind: GitRepository
    name: k8s-cluster-config
    namespace: flux-system